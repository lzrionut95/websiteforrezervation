@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}


@using (Html.BeginForm("DoResetPassword", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 login_bg">
                <h2>Reset Password</h2>
                <hr />
                <div class="col-md-10">
                   <p>Add your e-mail for reset the password.</p>
                </div>
                <div class="col-md-10">
                    Insert e-mail: <input type="text" name="userEmail" />
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send e-mail" class="btn btn-default" />
                    </div>
                </div>               
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
