@model WebsiteForReservation.Models.ReportViewModel
@{
    ViewBag.Title = "FindReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FindReservation</h2>


@using (Html.BeginForm("FindReservation", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label>Date</label>
                <input class="datepicker" type="datetime" name="dateTime" id="dateTime" />
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Reservation" class="btn btn-default" />
                </div>
            </div>
    </div>
}

@using (Html.BeginForm("DoReservation", "Home", FormMethod.Post))
{

    DateTime startDate = new DateTime().AddHours(10);
    DateTime endDate = startDate.AddHours(10);
    DateTime[] vector = new DateTime[50];
    int i = 0;


    while (startDate.AddMinutes(15) <= endDate)
    {
        vector[i] = startDate;
        startDate = startDate.AddMinutes(15);
        i++;
        string fullDate = startDate.Hour.ToString() + ":" +@startDate.Minute.ToString();
    
        Model.dateTimeData = vector[i];
    
        @Html.TextBoxFor (s => s.dateTimeData);
        @Html.ValidationMessageFor(s => s.dateTimeData);
    
        <input type="submit" value="Reserve" />
    <hr/>

    }

}

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section Scripts {

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd/mm/yyyy",
                changeMonth: true,
                changeYear: true,
                //yearRange : "-10:+10"
                minDate: new Date(2017, 0, 1),
                maxDate: new Date(2030, 0, 1),
                showOn: "both",
                buttonText: "<i class='fa fa-calendar'></i>"
            });
        });
    </script>
}
